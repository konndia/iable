<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JourneyAchievementActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Путешествие"
        android:textColor="#215273"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/backToAch"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/arrow_back"
        android:backgroundTint="@null"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_back" />

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:background="@drawable/journey"
        android:layout_marginTop="150dp"
        android:layout_marginStart="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сделайте свой первый шаг с нами!"
            android:maxWidth="200dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="16dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/check"
            android:layout_centerVertical="true"
            android:layout_marginStart="280dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="3dp"
        android:background="@drawable/separator"
        android:layout_marginTop="250dp"
        android:layout_marginStart="15dp"
        />

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:background="@drawable/not_done"
        android:layout_marginTop="270dp"
        android:layout_marginStart="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пройдите 10 км"
            android:maxWidth="200dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="16dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/minus"
            android:layout_centerVertical="true"
            android:layout_marginStart="280dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:background="@drawable/not_done"
        android:layout_marginTop="370dp"
        android:layout_marginStart="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пройдите 100 км"
            android:maxWidth="200dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="16dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/minus"
            android:layout_centerVertical="true"
            android:layout_marginStart="280dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:background="@drawable/not_done"
        android:layout_marginTop="470dp"
        android:layout_marginStart="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пройдите 1000 км"
            android:maxWidth="200dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="16dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/minus"
            android:layout_centerVertical="true"
            android:layout_marginStart="280dp"/>

    </RelativeLayout>

</RelativeLayout>